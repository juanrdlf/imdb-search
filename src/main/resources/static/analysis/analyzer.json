{
  "settings" : {
    "analysis": {
      "analyzer": {
        "title_search_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["asciifolding","lowercase", "stemmer", "synonym_filter", "custom_word_delimiter"],
          "char-filters": ["html_strip"]
        }
      }
    },
    "filter": {
      "custom_word_delimiter": {
        "type": "word_delimiter_graph",
        "catenate_all": true
      },
      "synonym_filter": {
        "type": "synonym",
        "synonyms_path": "analysis/synonyms.txt"
      }
    }
  }

}