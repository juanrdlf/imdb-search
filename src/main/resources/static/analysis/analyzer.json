{
  "mappings" : {
    "properties": {
      "tConst": {
        "type": "keyword"
      },
      "titleType": {
        "type": "text"
      },
      "primaryTitle": {
        "type": "text",
        "analyzer": "title_search_analyzer"
      },
      "originalTitle": {
        "type": "text"
      },
      "isAdult": {
        "type": "boolean"
      },
      "startYear": {
        "type": "long"
      },
      "endYear": {
        "type": "long"
      },
      "runtimeMinutes": {
        "type": "long"
      },
      "genres": {
        "type": "text",
        "fielddata": true
      }
    }
  },
  "settings" : {
    "analysis": {
      "analyzer": {
        "title_search_analyzer": {
          "type": "custom",
          "tokenizer": "whitespace",
          "filter": ["asciifolding","lowercase", "flatten_graph", "synonym_filter", "custom_word_delimiter", "trim"],
          "char-filter": ["html_strip"]
        }
      }
    },
    "filter": {
      "custom_word_delimiter": {
        "type": "word_delimiter_graph",
        "catenate_all": true
      },
      "synonym_filter": {
        "type": "synonym",
        "synonyms_path": "analysis/synonyms.txt"
      }
    }
  }
}