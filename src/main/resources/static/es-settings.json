{
  "index": {

  },
  "analysis": {
    "analyzer": {
      "title_search_analyzer": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": ["asciifolding","lowercase", "stemmer", "synonym"],
        "char-filters": ["eliminate_hyphen_filter"]
      }
    }
  },
  "char_filter": {
    "eliminate_hyphen_filter": {
      "type": "pattern_replace",
      "pattern": "-",
      "replacement": ""
    }
  },
  "filter": {
    "synonym": {
      "type": "synonym",
      "synonyms_path": "analysis/synonyms.txt"
    }
  }
}